@page
@model CourseRegProg.Pages.CoursesModel
@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<table class="table">
    <thead>
        <tr>
            <th>Course ID</th>
            <th>Course Number</th>
            <th>Course Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.CourseId</td>
                <td>@course.CourseNumber</td>
                <td>@course.CourseName</td>
                <td>@course.Description</td>
            </tr>
        }
    </tbody>
</table>
