@page
@model CourseRegProg.Pages.InstructorsModel
@{
    ViewData["Title"] = "Instructors";
}

<h1>Instructors</h1>

<table class="table">
    <thead>
        <tr>
            <th>Instructor ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Course Teaching</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model.Instructors)
        {
            <tr>
                <td>@instructor.InstructorId</td>
                <td>@instructor.FirstName</td>
                <td>@instructor.LastName</td>
                <td>@instructor.Email</td>
                <td>@instructor.CourseTeaching</td>
            </tr>
        }
    </tbody>
</table>
